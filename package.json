{
  "name": "@qiwi/decorator-utils",
  "version": "0.0.1",
  "description": "Tiny helper for js decorator building",
  "main": "src/index.js",
  "scripts": {
    "mocha": "nyc --reporter=html --reporter=text mocha --require babel-core/register --reporter spec test --recursive",
    "lint": "standard-flow src/**/*.js test/**/*.js",
    "flow": "flow",
    "test": "npm run lint && npm run flow && npm run mocha",
    "flow_coverage": "flow-coverage-report -i 'src/**/*.js' -t html -t json -t text --threshold 90",
    "build": "babel src --out-dir dist",
    "coveralls": "npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.qiwi.com:jslab/decorator-utils.git"
  },
  "keywords": [
    "decorator",
    "@decorator",
    "annotation"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-flow-runtime": "^0.17.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "flow-bin": "^0.75.0",
    "flow-coverage-report": "^0.5.0",
    "flow-remove-types": "^1.2.3",
    "glob": "^7.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "standard-flow": "^1.0.0"
  },
  "standard-flow": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect",
      "describe",
      "PropertyDescriptor"
    ],
    "ignore": [],
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "dependencies": {}
}
